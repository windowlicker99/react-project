{
  "include": ["./**/*.(ts|tsx)", "./.d.ts", "./src/**/*", "./__tests__/**/*" ],
  "compilerOptions": {
    "outDir": "./dist/",
    "noImplicitAny": true,
    "downlevelIteration": true,
    "module": "es6",
    "target": "es5",
    "jsx": "react",
    "allowJs": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@images/*": ["src/img/*"],
      "@components/*": ["src/components/*"],
      "@styles/*": ["src/styles/*"],
      "@routing/*": ["src/routing/*"],
      "@store/*": ["src/store/*"],
      "@api/*": ["src/api/*"],
      "@interfaces/*": ["src/interfaces/*"],
      "@utils/*": ["src/utils/*"],
      "@services/*": ["src/services/*"],
      "@constants/*": ["src/constants/*"],
    }
  }
}